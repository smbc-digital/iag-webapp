{
  "src_folders" : ["specs/"],
  "output_folder" : "reports",
  "custom_commands_path" : "",
  "custom_assertions_path" : "",
  "page_objects_path" : "page_objects",
  "globals_path" : "global.js",

  "selenium" : {
    "start_process" : true,
    "start_session": true,
    "server_path" : "selenium-server-standalone-2.53.0.jar",
    "log_path" : false,
    "host" : "127.0.0.1",
    "port" : 4448,
    "cli_args" : {
      "webdriver.chrome.driver" : "",
      "webdriver.ie.driver" : ""
    }
  },

  "test_settings" : {
    "default" : {
      "launch_url" : "http://127.0.0.1",
      "selenium_port"  : 4448,
      "selenium_host"  : "localhost",
      "silent": true,
      "screenshots" : {
        "enabled" : true,
        "on_failure" : true,
        "on_error" : true,
        "path" : "screenshots"
      },
      "desiredCapabilities": {
        "browserName": "phantomjs",
        "javascriptEnabled": true,
        "acceptSslCerts": true,
        "phantomjs.binary.path" : "node_modules/phantomjs-prebuilt/lib/phantom/bin/phantomjs.exe",
        "phantomjs.cli.args" : ["--webdriver=8081"]
      }
    },
    
    "healthystockport" : {
      "desiredCapabilities": {
        "phantomjs.page.customHeaders.BUSINESS-ID": "healthystockport"
      }
    },

    "stockportgov" : {
      "desiredCapabilities": {
        "phantomjs.page.customHeaders.BUSINESS-ID": "stockportgov"
      }
    }

  }
}
