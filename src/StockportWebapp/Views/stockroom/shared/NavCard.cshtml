@inject ViewHelpers viewHelper

@model NavCard
@{
    string imageSrc = !string.IsNullOrEmpty(Model.TeaserImage)
        ? Model.TeaserImage
        : Model.Image;

    string type = (string)ViewData["itemsType"] ?? string.Empty;
}

<li class="card-item">
    <a class="card-item__link" href="@Model.Url" aria-label="Read more about @Model.Title">
        <div class="card-item__content-wrapper">
            <partial name="CardImage" model="imageSrc" />

            <div class="card-item__container">
                <h3 class="h-l">@Model.Title</h3>

                <div>
                    <p class="card-item__content-teaser">
                        @(type.Equals("events") ? viewHelper.FormatEventDate(Model.Date, Model.Time) : Model.Teaser)
                    </p>
                
                    <span class="btn card-item__container-btn">Read more</span>
                </div>
            </div>
        </div>
    </a>
</li>