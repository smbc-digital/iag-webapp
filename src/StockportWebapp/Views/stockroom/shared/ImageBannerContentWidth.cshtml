@{
    string title = (string)ViewData["bannerTitle"] ?? string.Empty;
    string slug = (string)ViewData["bannerSlug"];
    string teaser = (string)ViewData["bannerTeaser"];
    string image = (string)ViewData["image"];
}

<section class="section image-banner image-banner-content-width" data-cy="image-banner-content-width">
    <div class="grid-container">
        <div class="grid-100">
            <div class="image-banner__wrapper">
                <a href="@slug"
                    class="image-banner__background image-banner__background--position"
                    style="background-image: url(@image?q=89&fm=webp)">
                    <div class="image-banner__content image-banner__content--border-radius">
                        <h2 class="image-banner__title font--bold-extra-squeezed">@title</h2>
                        <p>@teaser</p>
                    </div>
                </a>
            </div>
        </div>
    </div>
</section>