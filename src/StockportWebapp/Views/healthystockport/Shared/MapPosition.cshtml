@model MapDetails

<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCPMO2lE7np9cG_zG63JH_pNVmRfoajZjg&callback=initMap"></script>
<div id="map" class="grid-100 map-container"></div>
<script>
    function initMap() {
        var eventLocation = { lat: @Model.MapPosition.Lat, lng: @Model.MapPosition.Lon };
        var map = new google.maps.Map(document.getElementById('map'),
        {
            zoom: 18,
            center: eventLocation
        });
        var marker = new google.maps.Marker({
            position: eventLocation,
            map: map,
            title: "@ViewData["Location"]"
        });
    }
</script>

<div class="embed-map-container">
    <img src="https://maps.googleapis.com/maps/api/staticmap?center=@Model.MapPosition.Lat,@Model.MapPosition.Lon&zoom=17&size=1024x250&scale=2&markers=@Model.MapPosition.Lat,@Model.MapPosition.Lon&key=AIzaSyCPMO2lE7np9cG_zG63JH_pNVmRfoajZjg" />
</div>

<div class="grid-100 grid-parent directions-list">
    <div class="grid-25 grid-parent direction">
        <stock-button class="directions-button" as-link="true" target="_blank" href="https://www.google.com/maps/dir/?api=1&origin=current+location&destination=@Model.MapPosition.Lat,@Model.MapPosition.Lon&travelmode=walking"><span class="fa fa-male" aria-hidden="true"></span>Walking<span class="hide-on-desktop"> directions</span></stock-button>
    </div>

    <div class="grid-25 grid-parent direction">
        <stock-button class="directions-button" as-link="true" target="_blank" href="https://www.google.com/maps/dir/?api=1&origin=current+location&destination=@Model.MapPosition.Lat,@Model.MapPosition.Lon&travelmode=driving"><span class="fa fa-car" aria-hidden="true"></span>Driving<span class="hide-on-desktop"> directions</span></stock-button>
    </div>

    <div class="grid-25 grid-parent direction">
        <stock-button class="directions-button" as-link="true" target="_blank" href="https://www.google.com/maps/dir/?api=1&origin=current+location&destination=@Model.MapPosition.Lat,@Model.MapPosition.Lon&travelmode=transit"><span class="fa fa-train" aria-hidden="true"></span>Public transport<span class="hide-on-desktop"> directions</span></stock-button>
    </div>

    <div class="grid-25 grid-parent direction">
        <stock-button class="directions-button" as-link="true" target="_blank" href="https://www.google.com/maps/dir/?api=1&origin=current+location&destination=@Model.MapPosition.Lat,@Model.MapPosition.Lon&travelmode=bicycling"><span class="fa fa-bicycle" aria-hidden="true"></span>Cycling<span class="hide-on-desktop"> directions</span></stock-button>
    </div>

    For accessible transport options visit our <a href="https://www.stockport.gov.uk/accessibleTransport">accessible transport page</a>.
</div>