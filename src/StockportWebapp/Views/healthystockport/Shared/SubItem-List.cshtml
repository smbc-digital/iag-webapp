@model StockportWebapp.Models.Topic
@{ var allTopics = Model.SubItems.Concat(Model.SecondaryItems);}
<ul class="article-list">
    

    @foreach (var subItem in allTopics)
    {
        <li class="article-list-item grid-50 tablet-grid-50 mobile-grid-100" style="margin-bottom: 25px;">
            <a href="@subItem.NavigationLink" class="article-list-item-block grid-45 tablet-grid-45">
                <div style="text-align: left">
                    <h2 style="color: #333333; font-weight: 600; font-size: 16px;">@subItem.Title</h2>
                    <p>@subItem.Teaser</p>
                </div>
                <div class="article-chevron hide-on-mobile l-right-align">
                    <i aria-hidden="true" class="fa fa-3x fa-angle-right"></i>
                </div>
            </a>
        </li>
    }
</ul>