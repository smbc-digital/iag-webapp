@model ThankYouMessageViewModel
@{
    ViewData["Title"] = "Thank you";
    Layout = "../Shared/_LayoutError.cshtml";
    ViewData["og:title"] = "Thank you";
}

<div class="l-background-fixed l-short-page-background hide-on-mobile"></div>
<main class="grid-container" id="error-grid-container">
    <div class="l-container l-body-container l-body-container-pushed l-body-container-mobile">
        <div class="l-short-page-content grid-100">
            <partial name="DisplayTemplates/Gutter" model='"fa-envelope-o"' />
            <section aria-label="Thank you" class="grid-90 mobile-grid-100">
                <partial name="DisplayTemplates/Breadcrumb" model='new List<Crumb>()' />
                <div class="grid-70 mobile-grid-100 l-content-container">
                    <h1>Thank you for contacting us</h1>
                    <p>We’ll respond to your enquiry as soon as possible.</p>
                    <a class="button button-outline button-partialrounded button-call-to-action" href="@Model.ReturnUrl">Return to previous page</a>
                </div>
            </section>
        </div>
    </div>
</main>