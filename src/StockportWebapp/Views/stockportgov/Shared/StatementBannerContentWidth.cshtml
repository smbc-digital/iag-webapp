@model SubItem
@if (Model is not null)
{
    string contentTextClass = (Model.SubItems is not null && Model.SubItems.Any()) || !string.IsNullOrEmpty(Model.Link) ? string.Empty : "statement-banner-content__text-no-button";
    
    <section class="section section--white">
        <div class="grid-container">
            <div class="grid-100">
                <div class="statement-banner section__content bg-default-light border-default @Model.BackgroundColourClass @Model.BorderColourClass" data-cy="statement-banner-content-width">
                    <span class="@Model.Icon statement-banner__icon text-default @Model.TextColourClass"></span>
                    <div class="statement-banner-content">
                        <h3 class="statement-banner-content__title text-default @Model.TextColourClass">@Model.Title</h3>
                        <div class="statement-banner-content__text @contentTextClass">@Html.Raw(Model.Body)</div>

                        <a href="@(Model.SubItems.Any() ? Model.SubItems.FirstOrDefault().NavigationLink : Model.Link)" class="btn btn--inverse btn--width-30 btn--chevron-forward btn--bold btn--chevron-bold btn-@CssClassMapper.GetBoldCssClass(Model.ColourScheme)" data-cy="statement-banner-content-width-link">
                            <span class="btn_text">@(!string.IsNullOrEmpty(Model.ButtonText) ? Model.ButtonText : "Read more")</span>
                            @if(string.IsNullOrEmpty(Model.ButtonText))
                            {
                                <span class="visuallyhidden">about @Model.Title</span>
                            }
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
}