@model Alert

<div tabindex="0" class="focusable alert-content condolence-alert">
    <div class="condolence-alert__text">
        <h3>@Model.Title</h3>
        @if (!string.IsNullOrEmpty(Model.SubHeading))
        {
            <p class="alert-subheading">@Model.SubHeading</p>
        }
        @Html.Raw(Model.Body)
    </div>
    <div class="condolence-alert__image">
        <img src="@Model.ImageUrl" />
    </div>
</div>

