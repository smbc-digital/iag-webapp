@model StockportWebapp.QuestionBuilder.Entities.Question

<div class="form-section question-section">
    <label for="radio-list">@Model.Label</label>
    @if (!String.IsNullOrEmpty(Model.SecondaryInfo))
    {
        <div class="grid-100" style="padding-left:0px;">
            <div class="grid-50 tablet-grid-70 secondary-info-holder">
                @Html.Raw(Model.SecondaryInfo)
            </div>
        </div>
    }
    <span>Select from the list</span>
    <ul id="radio-list" class="radio-list question-list">
        @foreach (var item in @Model.Options)
        {
            <li>
                <input role="radiogroup" type="radio" name="Questions[0].Response" id="@string.Concat(@Model.QuestionId, @item.Value).Replace(" ", "-")" aria-labelledby="@string.Concat("label-",@Model.QuestionId, @item.Value).Replace(" ", "-")" data-questionid="@Model.QuestionId" value="@item.Value" />
                <label id="@string.Concat("label-",@Model.QuestionId, @item.Value).Replace(" ", "-")" for="@string.Concat(@Model.QuestionId, @item.Value).Replace(" ", "-")">@item.Label</label>
                <span class="tertiary-Information hidden">@item.TertiaryInformation</span>
            </li>
        }
    </ul>

    @Html.Partial("_ValidationError.cshtml", Model)

    <span id="tertiary-Information-value"></span>

</div>