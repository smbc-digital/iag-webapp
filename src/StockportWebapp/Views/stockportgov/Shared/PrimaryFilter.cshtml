@using StockportWebapp.ViewModels
@model PrimaryFilter
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCPMO2lE7np9cG_zG63JH_pNVmRfoajZjg"
        async defer></script>

<form asp-controller="Groups" asp-action="Results" method="get" class="primary-filter-form">

    <input asp-for="Latitude" type="hidden" id="latitude" name="latitude" />
    <input asp-for="Longitude" type="hidden" id="longitude" name="longitude" />

    <div class="grid-100">
        <div class="primary-filter-form-section">
            <label>Show me</label>
            <select asp-for="Category" asp-items="@(new SelectList(Model.Categories, "Slug", "Name"))" class="primary-filter-select custom-arrow" id="selectCategory">
                <option selected value="all">All</option>
            </select>
        </div>
        <div class="primary-filter-form-section" style="position: relative">
            <label>groups in</label>
            <input asp-for="Location" type="text" readonly="readonly" id="postcode" class="primary-filter-select custom-arrow"/>
            <div id="getLocation">
                <span>Enter postcode or place name</span>
                <input type="text" id="location"/>
                <a id="currentLocation" href="#"><i class="fa fa-crosshairs"></i><span>Find my current location</span></a>
                <button class="button-default" id="btnLocation">Use this location</button>
            </div>
        </div>

        <div class="primary-filter-form-section">
            <label>sorted by</label>
            <select asp-for="Order" asp-items="@(new SelectList(Model.Orders))" class="primary-filter-select custom-arrow" id="selectOrder"></select>
        </div>
        <div class="primary-filter-form-section-button">
            <button type="submit" class="button-default">Search groups</button>
        </div>
    </div>
    <select id="hiddenSelectCategory" class="primary-filter-select hidden-select"></select>
    <select id="hiddenSelectOrder" class="primary-filter-select hidden-select"></select>
    <select id="hiddenSelectLocation" class="primary-filter-select hidden-select"></select>
</form>