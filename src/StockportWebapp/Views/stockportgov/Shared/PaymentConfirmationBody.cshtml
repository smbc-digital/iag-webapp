@model StockportWebapp.Models.PaymentResponse

<div class="grid-100 centre">
    <h1 class="group-article-title">Pay your @Model.Title.ToLower()</h1>
    <div class="icon-bordered icon-bordered-fixed green tick">
        <i class="fa fa-check fa-5x" aria-hidden="true"></i>
    </div>
    <h2>Your @Model.Title.ToLower() payment has been successful</h2>
</div>
<div class="grid-100 centre">
    <p>Your payment of <strong>&pound;@Model.Amount</strong> has been sent succesfully.</p>
    <p>Your payment reference is <strong>@Model.ReceiptNumber</strong>.</p>
    <p>You made the payment on @DateTime.Parse(Model.Date).ToString("d MMM yyyy 'at' h:mm tt")</p>
</div>
