@model Tuple<string, string, string, string>


<section class="home-search">
    <h2 class="visuallyhidden">Search stockport.gov.uk</h2>
    <form method="get" id="@Model.Item1">
        <label class="visuallyhidden" for="@Model.Item3">
            search input box
        </label>
        <input class="grid-100 tablet-grid-100 mobile-grid-100 home-search_search-input" id="@Model.Item3" data-cy="search-bar" type="text" name="query" placeholder="@Model.Item2" autocomplete="off">
        <button value="Submit search" class="home-search_search-button" data-cy="search-submit" type="submit">
        <span class="fa fa-search" aria-hidden="true"></span><span class="visuallyhidden"> Submit Search</span>
        </button>
    </form>
</section>