@model LocationSearch

<input type="hidden" id="locationControlId" value="@Model.LocationControlId" />
<input type="hidden" id="longitudeControlId" value="@Model.LongitudeControlId" />
<input type="hidden" id="latitudeControlId" value="@Model.LatitudeControlId" />
<input type="hidden" id="callback" value="@Model.Callback" />
<div class="primary-filter-form-section location-search-section">
    <label class="hide-on-mobile primary-filter-label" for="postcode">@Model.Label</label>
    <label class="hide-on-desktop hide-on-tablet primary-filter-label" for="postcode">Enter a location</label>
    <input  type="text" readonly="readonly" id="postcode" value="@Model.Default" class="primary-filter-select custom-arrow expandable-toggle" />
    <div  role="alert" aria-atomic="true" id="getLocation" class="getLocation-width-mobile expandable-box">
        <label class="location-search-label" for="location-autocomplete">Enter postcode or place name</label>
        <input type="text" id="location-autocomplete" class="location-search-input input-validation-error" aria-atomic = "true" />
        <div id="locationError" class="form-field-validation-error grid-100 tablet-grid-100 mobile-grid-100 grid-parent"></div>
        <div class="search-link">
            <a id="currentLocation" class="current-location" href="javascript:void(0);"><span class="fa fa-crosshairs" aria-hidden="true"></span><span>Find my current location</span></a>
        </div>
        <div class="search-link search-all">
            <a id="allLocations" class="all-locations" href="javascript:void(0);"><span class="fa fa-compass" aria-hidden="true"></span><span>Search all locations</span></a>
        </div>
        <button class="button-default location-search-button" id="btnLocationAutoComplete">Use this location</button>
    </div>
</div>
<script>
    require(['/assets/javascript/config-24c26c86.min.js'], function() {
        require(['google.places'], function() { } );
    });
</script>