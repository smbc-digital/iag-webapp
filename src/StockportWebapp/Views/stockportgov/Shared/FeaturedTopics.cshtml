@using StockportWebapp.FeatureToggling
@model IEnumerable<StockportWebapp.Models.Topic>
@inject FeatureToggles FeatureToggles

@{
    var PrimaryFeaturedTopics = Model.Take(3);
    var SecondaryFeaturedTopics = Model.Skip(3);
}

@if (FeatureToggles.NewHomepageLayout)
{
    <section aria-label="Featured topics" class="grid-100 mobile-grid-100">
        <div class="featured-topics featured-topics-secondary">
            @Html.Partial("SecondaryFeaturedTopicList", Model)
        </div>
    </section>
}
else
{
<section aria-label="Featured topics" class="grid-100 mobile-grid-100">
    @Html.Partial("PrimaryFeaturedTopicsWithDropdown", PrimaryFeaturedTopics)
    <div class="featured-topics featured-topics-secondary">
        @Html.Partial("SecondaryFeaturedTopicList", SecondaryFeaturedTopics)
    </div>
</section>
}