@model IEnumerable<StockportWebapp.Models.Topic>

@{
    var PrimaryFeaturedTopics = Model.Take(4);
    var SecondaryFeaturedTopics = Model.Skip(4);
}

<section class="grid-100 mobile-grid-100">
    @Html.Partial("PrimaryFeaturedTopicsWithDropdown", PrimaryFeaturedTopics)
    <div class="featured-topics featured-topics-secondary">
        @Html.Partial("SecondaryFeaturedTopicList", SecondaryFeaturedTopics)
    </div>
</section>
