<button 
    type="button"
    class="site-header_mobile-search-button hide-on-desktop"
    data-cy="show-search"
    aria-controls="siteHeaderMobileSearchInput">
    <span class="visuallyhidden">toggle search</span>
    <span class="fa fa-search" aria-hidden="true"></span>
</button>

<div id="siteHeaderMobileSearchInput" class="grid-100 site-header_mobile-search" >
    <section class="site-header_search-input-wrapper hide-on-desktop">
        <h2 class="visuallyhidden">Search stockport.gov.uk</h2>
        <form method="get" id="cludo-mobile-form">
            <label class="visuallyhidden" for="mobile-search-bar">
                search input box
            </label>

            <input class="site-header_search-input" id="mobile-search-bar" data-cy="search-bar" type="text" name="query" placeholder="Search" autocomplete="off">
            
            <button value="Submit search" class="site-header_search-button" data-cy="search-submit" type="submit">
                <span class="fa fa-search" aria-hidden="true"></span><span class="visuallyhidden"> Submit Search</span>
            </button>
        </form>
    </section>
</div>