@model ContentBlock

@if (Model is not null && !string.IsNullOrEmpty(Model.Link))
{
    MapViewModel mapViewModel = new(Model.Title, Model.Link);
    
    <noscript>
        <style>
            .js-only { display: none; }
        </style>
    </noscript>
    <section class="section section--white js-only" data-cy="map">
        <div class="grid-container">
            <div class="grid-100">
                @if (!string.IsNullOrEmpty(Model.Title))
                {
                    <div class="find-out-more__title">
                        <h2 class="section__title section__title--no-padding section__title--margin-bottom">@Model.Title</h2>
                        @Html.Raw(Model.Body)
                        <hr />
                    </div>
                }

                <div class="section__content">
                    <div class="video-wrapper">
                        <partial name="MapIFrame" model="@mapViewModel" />
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script type='text/javascript' src='{tagData}/main-latest.js'></script><link rel=stylesheet href='https://kit.fontawesome.com/d14fbc06e0.css' crossorigin='anonymous'>
}