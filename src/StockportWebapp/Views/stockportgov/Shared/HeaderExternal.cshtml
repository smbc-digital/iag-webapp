@inject IStaticAssets StaticAssets
@model bool
@{
    string democracyHomeLink = "https://www.stockport.gov.uk";
}

<div class="site-header grid-container-full-width">
    <nav aria-label="Skip to main content">
        <div class="skip-to-main-content">
            <a href="#content" class="skip-main">Skip to main content</a>
        </div>
    </nav>

    <header role="banner" id="header" class="grid-container">
        <div class="grid-30 tablet-grid-100 mobile-grid-100">
            <a href="@democracyHomeLink">
                <img src='//images.ctfassets.net/ii3xdrqc6nfw/4RRv8ZnCdqyKUum06wAKuy/7ca504321524ee844946ec5e0cfddee9/logo-stockport-full_2x.png?fm=webp'
                    alt="Stockport Council Logo Homepage Link"
                    class="site-header_logo"
                    width="245"
                    height="60">
            </a>

            @if(Model)
            {
                <partial name="MobileSearchBar2023" />
            }
        </div>

        <div class="grid-70 tablet-grid-100 mobile-grid-100 grid-parent">
            <div class="grid-60 site-header_menu-wrapper">
                <partial name="HeaderMenu" />
            </div>

            @if(Model)
            {
                <div class="grid-40 site-header_search-wrapper">
                    <partial name="HeaderSearchBar2023" />
                </div>
            }
        </div>
    </header>
</div>

<partial name="BrowserCheck" />

<script type="text/plain" data-cookie-consent="strictly-necessary">
    require(['@democracyHomeLink/assets/javascript/config-external-f92ca697.min.js'], function() {
        require(['startup', 'cludo', 'Cludo'],
            function (startup, cludo, _) {
                startup.Init();
                cludo.Init();
            }
        );
    });
</script>

<script type="text/plain" data-cookie-consent="functionality">
    require(['@democracyHomeLink/assets/javascript/config-external-f92ca697.min.js'], function() {
        require(['utils', 'reciteMe'],
            function(utils, reciteMe, _) {
                reciteMe.Init();
                utils.Init();
            }
        );
    });
</script>