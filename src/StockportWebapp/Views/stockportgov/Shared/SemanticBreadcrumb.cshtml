@model IEnumerable<StockportWebapp.Models.Crumb>
@{
    string title = ViewData["Title"] != null ? ViewData["Title"].ToString() : "";
}

<nav id="breadcrumb" class="@((bool?)ViewData["Form"] ?? false ? "breadcrumb hidden" : "breadcrumb")" aria-label="Breadcrumb navigation">
    <ul class="center-wrapper">
        <li><a href="https://www.stockport.gov.uk/">Home</a></li>
        @if (Model != null)
        {
            foreach (var crumb in Model)
            {
                <li><a href="@crumb.NavigationLink">@crumb.Title</a></li>
            }
        }
        <li class="current">
            <span>@title</span>
        </li>
    </ul>
</nav>