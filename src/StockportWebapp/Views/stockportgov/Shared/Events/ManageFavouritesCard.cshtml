@model StockportWebapp.ProcessedModels.ProcessedGroup
    <div class="add-favourite sidebar-links @(Model.Favourite ? "hidden" : "")">
        <span class=" fa fa-star-o fa-lg" aria-hidden="true"></span>
        <a data-slug="@Model.Slug" data-type="group" href="@($"/favourites/nojs/add?slug={Model.Slug}&type=group")">Add to favourites </a>
    </div>

    <div class="remove-favourite sidebar-links @(Model.Favourite ? "" : "hidden")">
        <span class="fa fa-star fa-lg" aria-hidden="true"></span>
        <a data-slug="@Model.Slug" data-type="group" href="@($"/favourites/nojs/remove?slug={Model.Slug}&type=group")">Remove from favourites</a>
    </div>