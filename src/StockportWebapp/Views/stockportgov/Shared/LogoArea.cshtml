@model List<TrustedLogo>
@{
    string borderTopClass = (string)ViewData["borderTopClass"];
    bool isLogoOnArticle = (bool)ViewData["logoAreaArticle"];
    bool displayInSection = ViewData["displayInSection"] is null 
        ? false 
        : (bool)ViewData["displayInSection"];

    bool displayFeaturedLogo = ViewData["displayFeaturedLogo"] is null
        ? false
        : (bool)ViewData["displayFeaturedLogo"];
}

@if (displayInSection && Model.Any())
{
    <section class="section section--white section--no-margin @borderTopClass" data-cy="logo-area">
        @if(isLogoOnArticle)
        {
            <partial name="LogoAreaImage" model='@Model' />
        }
        else
        {
            <div class="grid-container">
                <div class="grid-100">
                    <partial name="LogoAreaImage" model='@Model' />
                </div>
            </div>
        }   
    </section>
}
else if (Model.Any() || displayFeaturedLogo)
{
    <partial name="LogoAreaImage" model='@Model' />
}