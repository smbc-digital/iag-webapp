@model SubItem
@if (Model is not null && Model.SubItems.All(subItem => subItem.ContentType.Equals("TriviaCardsContentWidth")))
{
    @if (Model.SubItems.Count.Equals(3) && Model.SubItems.All(subItem => subItem.ContentType.Equals("TriviaCardsContentWidth")))
    {
        <section class="section section--white" data-cy="trivia-cards-content-width">
            <div class="grid-container">
                <div class="grid-100">
                    <div class="section__content">
                        <h2 class="visuallyhidden">@Model.Title</h2>
                        <ul class="navcard-wrapper navcard-wrapper--no-margin">
                            @foreach (SubItem subItem in Model.SubItems)
                            {
                                <partial name="TriviaCard" model="@subItem" view-data="@(new ViewDataDictionary(ViewData) { {"BackgroundColourClass", Model.BackgroundColourClass}, {"BorderClass", Model.BorderClass}, {"TextColourClass", Model.TextColourClass},  {"CardType", "trivia-card"} })" />
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </section>
    }
    else if (Model.SubItems.Count > 3)
    {
        <partial name="TriviaList" model="@Model" />
    }
}