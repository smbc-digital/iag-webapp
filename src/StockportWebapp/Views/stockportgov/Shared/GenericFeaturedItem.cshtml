@model IEnumerable<StockportWebapp.Models.GenericFeaturedItem>
@{
    var count = 0;
    foreach (var item in Model)
    {
        count++;
        <div class="grid-25 tablet-grid-20 mobile-grid-25 featured-topic matchbox-child @(count > 4 ? "hide-on-mobile" : string.Empty)">
    
                <div class="featured-topic-content">
                    <a class="featured-topic-link" href="@item.Url">
                        <div class="featured-topic-icon">
                            <span class="@item.Icon si-default" aria-hidden="true"></span>
                        </div>
                        <h3 class="featured-topic-name">@item.Title</h3>
                    </a>
                    @if (item.SubItems != null && item.SubItems.Any())
                    {
                    <div class="hide-on-mobile hide-on-tablet featured-topic-description">
                        <p>Including</p> 
                        <ul>
                            @foreach (var subItem in item.SubItems.Take(2))
                            {
                                <li><a href="@subItem.Url">@subItem.Title</a></li>
                            }
                        </ul>
                    </div>
                    }
                </div>
        </div>
    }
}