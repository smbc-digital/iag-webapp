@model ContactUsDetails

<div id="contactForm">
    <noscript>
        <div class="grid-100 alert-inline alert-inline--warning">
            <h2><span class="fa-solid fa-circle-exclamation alert-inline-icon"></span>There has been a problem</h2>
            <p>For security reasons, you can’t use our contact forms with JavaScript turned off. Please enable JavaScript to use the form or alternatively send your enquiry to webcontent@stockport.gov.uk</p>
        </div>

        <style>
            .contact-us-form {
                display: none;
            }
        </style>
    </noscript>

    <form method="post" role="form" action="/contact-us" enctype="multipart/form-data" data-cy="contact-us-form" class="form contact-us-form">
        @Html.AntiForgeryToken()
        
        <div class="form-section">
            <fieldset>
                <legend>Send an enquiry</legend>

                <input type="hidden" asp-for="Title" />
                <label asp-for="@Model.Name" class="name-label"></label>
                <input class="payment__input" asp-for="@Model.Name" type="text" />
                <span role="alert" aria-atomic="true" asp-validation-for="@Model.Name" class="form-field-validation-error grid-50 tablet-grid-50 suffix-50 tablet-suffix-50 mobile-grid-100 grid-parent"></span>
                
                <label asp-for="@Model.Email"></label>
                <input class="payment__input" asp-for="@Model.Email" autocomplete="email" />
                <span role="alert" aria-atomic="true" asp-validation-for="@Model.Email" class="form-field-validation-error grid-50 tablet-grid-50 suffix-50 tablet-suffix-50 mobile-grid-100 grid-parent"></span>
                
                <label asp-for="@Model.Subject"></label>
                <input class="payment__input" asp-for="@Model.Subject" />
                <span role="alert" aria-atomic="true" asp-validation-for="@Model.Subject" class="form-field-validation-error grid-50 tablet-grid-50 suffix-50 tablet-suffix-50 mobile-grid-100 grid-parent"></span>
                
                <label asp-for="@Model.Message"></label>
                <div class="enquiry-message">
                    <textarea asp-for="@Model.Message" class="payment__input form-control-deep"></textarea>
                    <span role="alert" aria-atomic="true" asp-validation-for="@Model.Message" class="form-field-validation-error grid-50 tablet-grid-50 suffix-50 tablet-suffix-50 mobile-grid-100 grid-parent"></span>
                    <span class="text-control chars-remaining">
                        <small></small>
                    </span><br />
                </div>

                <input type="hidden" asp-for="@Model.ServiceEmailId" value="@Model.ServiceEmailId" />
                <div class="g-recaptcha reCaptcha" data-sitekey="6LfAeSIUAAAAAGsx6tYHz4MIvhP0pSx9Tq7Hf8Yx"></div>
                <div class="clearfix"></div>

                <div>
                    <button type="submit" class="btn btn--chevron-forward btn--width-30 button-contact-us">Send your enquiry</button>
                </div>
            </fieldset>
        </div>
    </form>
</div>

<script>
    require(['/assets/javascript/config-f8d6a257.min.js'], function () {
        require(['startup', 'contactUs', 'jquery.steps', 'recaptcha', 'utils', 'unobtrusive'],
            function (startup, contactus) {
                startup.Init();
                contactus.Init();
            })
    });
</script>