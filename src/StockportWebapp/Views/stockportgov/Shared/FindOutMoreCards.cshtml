@model ContentBlock
@if (Model is not null && Model.SubItems.Count.Equals(3))
{
    <section class="content-block content-block--extra-margin" data-cy="find-out-more-cards">
        <div class="grid-container">
            <div class="grid-100">
                @if(!string.IsNullOrEmpty(Model.Title))
                {
                    <div class="find-out-more__title">
                        <h2 class="section__title section__title--no-padding section__title--margin-bottom">@Model.Title</h2>
                        <hr />
                    </div>
                }
                
                <div class="section__content">
                    <ul class="navcard-wrapper navcard-wrapper--no-margin">
                        @foreach(ContentBlock contentBlock in Model.SubItems)
                        {
                            <partial name="FindOutMoreCard" model="@contentBlock" view-data="@(new ViewDataDictionary(ViewData) { {"TextColourClass", Model.TextColourClass} })" />
                        }
                    </ul>
                </div>
            </div>
        </div>
    </section>
}