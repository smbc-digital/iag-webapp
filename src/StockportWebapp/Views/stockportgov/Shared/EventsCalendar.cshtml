@using System.Threading.Tasks
@using StockportWebapp.Utils
@model StockportWebapp.Models.EventCalendar
@{
    var currentUrl = new QueryUrl(Url.ActionContext.RouteData.Values, Context.Request.Query);
    var filteredUrl = new FilteredUrl(currentUrl);
    var selectedCategory = Context.Request.Query["category"];
    var dateRange = Context.Request.Query["daterange"].ToString();
    var timeProvider = new TimeProvider();
    var dateCalculator = new DateCalculator(timeProvider);

    var dateFilter = dateCalculator.ReturnDisplayNameForFilter(dateRange);
}
<div class="grid-container events-grid-container-margins">
    <div class="grid-30 tablet-grid-100 mobile-grid-100 l-events-filter"> 
        <p class="filters-heading">Refine by</p>
        <ul class="filters-list" id="category-list">
            @if (!string.IsNullOrEmpty(selectedCategory))
            {
                <li class="filter collapsible"><a class="removePadding" href="@Url.RouteUrl(filteredUrl.WithoutCategory())"><i class="fa fa-times" aria-hidden="true"></i> @selectedCategory</a></li>
            }
            @if (!string.IsNullOrEmpty(dateFilter))
            {
                <li class="filter collapsible"><a class="removePadding" href="@Url.RouteUrl(filteredUrl.WithoutDateFilter())"><i class="fa fa-times" aria-hidden="true"></i> @dateFilter</a></li>
            }
            <li class="collapsible">
                <ul class="filters-list">
                    <li class="@ViewBag.VisibleFilterDrowdownClass">
                        <p class="filter-title">Date</p>
                        <ul class="filters-list filters-outer-list">
                            
                            @foreach (var eventFilter in dateCalculator.EventFilters)
                            {
                                <li class="@(currentUrl.MatchesQueryParam("daterange", eventFilter.Key) ? "active" : "")">
                                    <a href="@Url.RouteUrl(currentUrl.AddQueriesToUrl(new Dictionary<string, string>() {{"datefrom", eventFilter.Value.DateFrom}, {"dateto", eventFilter.Value.DateTo}, {"daterange", eventFilter.Key}}))"> @eventFilter.Value.DateRange </a>
                                </li>
                            }
                        </ul>
                    </li>
                    <li class="@ViewBag.VisibleFilterDrowdownClass">
                        <p class="filter-title">Category</p>
                        <ul class="filters-list filters-outer-list">

                            @foreach (var category in Model.Categories)
                            {
                                <li class="@(currentUrl.MatchesQueryParam("category", category) ? "active" : "")">
                                    <a href="@Url.RouteUrl(currentUrl.AddQueriesToUrl(new Dictionary<string, string>() {{"category", category}}))"> @category</a>
                                </li>
                            }

                        </ul>
                    </li>
                </ul>

                <p class="mobile-filter-heading filter-title">Filter Events</p>
            </li>
        </ul>

    </div>
    <div class="grid-70 tablet-grid-100 mobile-grid-100 events-article-grid">
        @if (!Model.Events.Any())
        {
            <div class="grid-100 events-article-not-found">
                <h2>No events found</h2>
            </div>
        }
        else
        {                   
            <ul class="nav-card-events-list grid-100">
                @{
                    DateTime previousEventDate = DateTime.MinValue;
                }
                @foreach (var subItem in Model.Events)
                {
                    <li class="grid-100 grid-parent nav-card-events nav-card-events-item">
                        @if (subItem.EventDate.Date == DateTime.Now.Date && subItem.EventDate.Date != previousEventDate)
                        {
                            <div>
                                <h2 class="event-by-date-header">Today</h2>
                            </div>
                        }
                        else if (subItem.EventDate.Date == DateTime.Now.AddDays(1).Date && subItem.EventDate.Date != previousEventDate)
                        {
                            <div >
                                <h2 class="event-by-date-header">Tomorrow</h2>
                            </div>
                        }
                        else if (subItem.EventDate.Date != previousEventDate)
                        {
                            <div>
                                <h2 class="event-by-date-header">@subItem.EventDate.ToString("dddd dd MMMM yyyy")</h2>
                            </div>
                        }
                        @{
                            previousEventDate = subItem.EventDate.Date;
                        }
                        <div class="events-bottom-border grid-100 grid-parent">
                            @if (!string.IsNullOrEmpty(subItem.ThumbnailImageUrl))
                            {
                                <div class="mobile-grid-35 tablet-grid-30 grid-30 grid-parent nav-card-events-thumbnail nav-card-events-thumbnail-background-image tablet-push-70 push-70" style="background-image: url(@subItem.ThumbnailImageUrl);"></div>
                            }
                            <div class="@(!string.IsNullOrEmpty(subItem.ThumbnailImageUrl) ? "mobile-grid-65 tablet-grid-70 nav-card-events-detail pull-30 tablet-pull-30" : "") grid-70 grid-parent">
                               
                                <a href="@Url.Action("Detail", "Events", new {slug = subItem.Slug, date = subItem.EventDate.ToString("yyyy-MM-dd")})">
                                    <h2 class="nav-card-events-title">@subItem.Title</h2>
                                </a>
                                <div class="events-date hide-on-mobile">
                                    <i class="fa fa-clock-o"></i>@subItem.EventDate.ToString("dddd dd MMMM") @subItem.StartTime
                                </div>
                                <p class="hide-on-mobile nav-card-events-location">@Html.Raw(subItem.Location)</p>
                                <p class="nav-card-events-fee">@subItem.Fee</p>
                            </div>
                        </div>
                    </li>
                }
            </ul>
        }
    </div>
</div>