@model StockportWebapp.ViewModels.DirectoryViewModel

<div class="grid-container">
    <div class="grid-100">
    <div class="directory-search">
            <div class="grid-container">
                <div class="grid-100 grid-parent">
                    <h1>Welcome to the @Model.Directory.Title</h1>

                    <h2 class="visuallyhidden">Search the @Model.Directory.Title</h2>
                        <form asp-controller="Directory" asp-action="DirectoryResults" method="get" id="stockport-local-search-for" asp-route-slug="@Model.Directory.Slug">
                            <label class="visuallyhidden" for="searchTerm">
                                    search input box
                            </label>

                            <input class="grid-100 directory-search--input" id="searchTerm" name="searchTerm" data-cy="search-bar" type="text" placeholder="Search @Model.Directory.Title" autocomplete="off" value="@Model.SearchTerm">

                            <button value="Submit search" aria-label="Search" name="Search" class="directory-search--button btn btn--inverse btn--bold" data-cy="search-submit" type="submit">
                                <span class="fa fa-search hide-on-mobile hide-on-tablet" aria-hidden="true"></span><span class="hide-on-desktop">Search</span>
                            </button>
                        </form>
                    
                </div>
            </div>
        </div>
    </div>
</div> 