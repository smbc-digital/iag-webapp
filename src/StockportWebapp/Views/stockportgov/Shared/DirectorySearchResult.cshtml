@model DirectorySearchResultViewModel
<li class="navcard navcard--white navcard--border-top navcard--force-border-top navcard--width-100">
    <div class="navcard__content">
        <a href=@Url.ActionLink("DirectoryEntry", "Directory", new { directorySlug=@Model.DirectorySlug, entrySlug=@Model.Entry.Slug }) data-cy="nav-card-link" class="navcard__link navcard__link--border ">
            <div class="directory-result">
                <div class="directory-result__content">
                    <h3 class="navcard__title navcard__title--large">
                        @Model.Entry.Name
                    </h3>
                    <p class="navcard__sub-title">@Model.Entry.Address</p>
                    <div class="navcard__teaser">
                        @Model.Entry.Teaser
                    </div>
                </div>
                <div class="directory-result__brand">
                    @if (Model.Entry.Branding.Any())
                    {
                        <img src="@Model.Entry.Branding.FirstOrDefault()?.File.Url?w=340&q=89"
                                    srcset="@Model.Entry.Branding.FirstOrDefault()?.File.Url?w=340&q=89&fm=webp 340w"
                            alt="@Model.Entry.Branding.FirstOrDefault()?.File.Description"
                            width="300"
                            height="150"/>
                    }
                </div>
            </div>
        </a>
    </div>
</li>
