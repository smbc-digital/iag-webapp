@model DirectorySearchResultViewModel
<li class="navcard navcard--white navcard--border-top navcard--force-border-top navcard--width-100">
    <div class="navcard__content">
        <a href=@Url.Action("DirectoryEntry", "Directory", new { directorySlug=@Model.DirectorySlug, entrySlug=@Model.Entry.Slug }) data-cy="nav-card-link" class="navcard__link navcard__link--border ">
            <div class="directory-result">
                <div class="directory-result__content">
                    <h3 class="navcard__title navcard__title--large">
                        @Model.Entry.Name
                    </h3>

                    @if(!string.IsNullOrEmpty(Model.Entry.Provider)){
                        <p class="navcard__sub-title">@Model.Entry.Provider</p>
                    }
                    
                    <p class="navcard__sub-title">@Model.Entry.Address</p>
                    <div class="navcard__teaser">
                        @Model.Entry.Teaser
                    </div>
                </div>
                <div class="directory-result__brand">
                    @if(!string.IsNullOrEmpty(Model.Entry.Image)){
                        <img src="@Model.Entry.Image?w=340&q=89"
                             srcset="@Model.Entry.Image?w=340&q=89&fm=webp 340w"
                             class="directory__logo"
                             alt=""
                             width="300"
                             height="150">
                    }
                </div>
            </div>
        </a>
    </div>
</li>
