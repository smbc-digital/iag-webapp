@model TopicViewModel

@if (Model.Topic.PrimaryItems.Items.Any())
{
    <section class="section section--white section--no-margin">
        <h2 class="visuallyhidden">@(Model.Topic.PrimaryItemTitle ?? Model.Topic.Name)</h2>

        <div class="grid-container">
            <div class="grid-100" data-cy="navcard-list">
                <div class="section__content section__content--no-margin">
                    <partial name="TopicNavCardList" model="Model.Topic.PrimaryItems"/>
                </div>
            </div>
        </div>
    </section>
}