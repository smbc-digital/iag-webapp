@model SubItem
@{
    string overlayFade = !string.IsNullOrEmpty(Model.Body) ? "image-banner__content-fade" : string.Empty;
    string href = string.Empty;
    
    if (Model.SubItems.Any())
        href = Model.SubItems.First().NavigationLink ?? string.Empty;
    
    href = !string.IsNullOrEmpty(href) 
        ? $"href={@href}" : !string.IsNullOrEmpty(Model.Link) 
        ? $"href={@Model.Link}" : string.Empty;
}
@if (Model is not null)
{
    <section class="section image-banner" data-cy="image-banner-header">
        <div class="grid-container">
            <div class="grid-100">
                <a @href>
                    <img class="image-banner__background" src="@Model.Image?fm=webp" loading="lazy"/>
                    @if (!string.IsNullOrEmpty(Model.Body))
                    {
                        <div class="image-banner__content  @overlayFade">
                            <h1 class="image-banner__title">@Model.Title</h1>
                            <p class="image-banner__subtitle">@Html.Raw(Model.Body)</p>
                        </div>
                    }
                </a>
            </div>
        </div>
    </section>
}