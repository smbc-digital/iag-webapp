@model List<Trivia>

@if (Model is not null)
{
    <ul class="trivia__list">
        @foreach(var trivia in Model)
        {
            <li class="trivia-link__container">
                @if(!string.IsNullOrEmpty(trivia.Link))
                {
                    <a href="@trivia.Link" class="trivia__link" data-cy="trivia-list-link">
                        <div>
                            <span class="@trivia.Icon trivia-link__icon"></span>
                        </div>
                        
                        <div class="trivia-link__body">
                            @Html.Raw(trivia.Body)
                        </div>
                    </a>
                }
                else {
                    <div class="trivia__text" data-cy="trivia-list-text">
                        <div>
                            <span class="@trivia.Icon trivia-link__icon"></span>
                        </div>
                        
                        <div class="trivia-link__body">
                            @Html.Raw(trivia.Body)
                        </div>
                    </div>
                }
            </li>
        }
    </ul>
}