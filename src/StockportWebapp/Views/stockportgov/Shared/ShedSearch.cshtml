@model StockportWebapp.ViewModels.ShedSearchViewModel

<div class="grid-container">
    <div class="grid-100">
        <div class="directory-search">
            <div class="grid-container">
                <div class="grid-100 grid-parent">
                    <h1>Welcome to Stockport's heritage assets</h1>

                    <h2 class="visuallyhidden">Search the Stockport's heritage assets</h2>
                    <form asp-controller="Shed" asp-action="Index" method="get" id="stockport-local-search-for">
                        <label class="visuallyhidden" for="searchTerm">
                                search input box
                        </label>

                        <input class="grid-100 directory-search--input" id="searchTerm" name="searchTerm" data-cy="search-bar" type="text" placeholder="Search the Stockport's heritage assets" autocomplete="off" value="@Model.SearchTerm">

                        <button value="Submit search" aria-label="Search" name="Search" class="directory-search--button btn btn--inverse btn--bold" data-cy="search-submit" type="submit">
                            <span class="fa fa-search hide-on-mobile hide-on-tablet" aria-hidden="true"></span><span class="hide-on-desktop">Search</span>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 