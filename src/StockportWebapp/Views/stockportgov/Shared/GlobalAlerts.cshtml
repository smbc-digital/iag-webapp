@model IEnumerable<Alert>
@inject ICookiesHelper CookiesHelper

@if (Model is not null && Model.Any())
{
    var alertCookies = CookiesHelper.GetCookies<Alert>("alerts");

    @foreach (var alert in Model)
    {
        if (alertCookies is null || !alertCookies.Contains(alert.Slug))
        {
            <partial name="GlobalAlert" model='alert' />
        }
    }
}

<script type="text/javascript" data-cookie-consent="strictly-necessary">
    require(['/assets/javascript/config-80795c2e.min.js'], function () {
        require(['alerts'],
            function (alerts) {
                alerts.Init();
            }
        );
    });
</script>

<script type="text/plain" data-cookie-consent="functionality">
    require(['/assets/javascript/config-80795c2e.min.js'], function () {
        require(['alertsSetCookie'],
            function (alertsSetCookie) {
                alertsSetCookie.Init();
            }
        );
    });
</script>