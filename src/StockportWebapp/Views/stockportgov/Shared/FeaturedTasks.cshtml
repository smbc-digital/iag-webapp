@model IEnumerable<StockportWebapp.Models.SubItem>

<section tabindex="-1" id="content" class="task-block-list uitest-task-block-list-loaded">
    <h2 class="visuallyhidden">Popular services</h2>
    <div class="grid-container tablet-grid-100 mobile-grid-100 grid-parent">

            @{
                var count = 1;
                if (Model != null)
                {
                    <div class="task-block-container uitest-task-block-loaded">
                        @foreach (var subItem in Model)
                        {
                            <a href="@subItem.NavigationLink" class="task-block @(count == 1 ? "first" : "") @(count == Model.Count() ? "last" : "")" id="task-block-@count">
                                <div class="icon">
                                    <span class="@subItem.Icon si-default" aria-hidden="true"></span>
                                </div>
                                <div class="title">
                                    <h3 class="task-title uitest-task-title">@subItem.Title</h3>
                                </div>
                            </a>
                            count++;
                        }
                    </div>
                }
            }

    </div>
</section>