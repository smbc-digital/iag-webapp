@inject ViewHelpers ViewHelpers
@model Event
@{
    string fee = Model.Fee;
    if (Model.Fee == "0")
    {
        fee = "Free";

    }
}

<a href="/events/@Model.Slug" class="event-item">
    <img alt="" role="presentation" src="@Model.ImageUrl" />
    <h3>@Model.Title</h3>
    <div class="featured-event-item">
        <span class="fa fa-gbp"></span><p>@fee</p>
        <span class="fa fa-clock-o"></span><p>@ViewHelpers.FormatEventDate(Model.EventDate, Model.StartTime)</p>
        <span class="fa-solid fa-location-pin"></span><p>@Model.Location</p>
    </div>
</a>