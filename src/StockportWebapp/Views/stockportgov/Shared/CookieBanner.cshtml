<link rel="stylesheet" type="text/css" href="//wpcc.io/lib/1.0.2/cookieconsent.min.css" />
<script src="//wpcc.io/lib/1.0.2/cookieconsent.min.js"></script>
<script>
    window.addEventListener("load", function () {
        window.wpcc.init({
            border: "thin",
            corners: "small",
            colors: {
                popup: { background: "#285e61", text: "#ffffff", border: "#234e52" },
                button: { background: "#ffffff", text: "#234e52" }
            },
            content: {
                message: "This website uses cookies to make sure you get the best experience on our website.",
                link: "Learn more about the cookies we use.",
                href: "https://www.stockport.gov.uk/cookies",
                button: "Accept cookies"
            },
            container: '<div role="region" aria-label="Cookie notice" class="wpcc-container {{classes}}">{{children}}</div>',
            template: '<span class="wpcc-message">{{message}} <a class="wpcc-privacy" href="{{href}}" rel="noopener" target="{{target}}" tabindex="2">{{link}}</a></span><div class="wpcc-compliance"><a class="wpcc-btn" tabindex="3">{{button}}</a></div>'
        });
    });
</script>
