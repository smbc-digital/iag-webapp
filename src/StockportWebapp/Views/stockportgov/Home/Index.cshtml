@model HomepageViewModel
@{
    ViewData["Title"] = "Welcome to Stockport Council";
    ViewData["og:title"] = "Welcome to Stockport Council";
    ViewData["Description"] = @Model.HomepageContent.MetaDescription;
    Layout = "../Shared/_LayoutHome2023.cshtml";
}

<partial name="CondolenceAlerts" model='Model.HomepageContent.CondolenceAlerts' />
<partial name="GlobalAlerts" model='Model.HomepageContent.Alerts' />
<partial name="HomepageHero" />
<partial name="HomepageHeroMobile" />
<partial name="CallToAction" model='Model.HomepageContent.CallToActionPrimary' />
<partial name="HomepageOurServices" />
<partial name="CallToAction" model='new CallToActionBanner() { Image = "/assets/images/logos/Stockport_Live-Well_Directory_Block_Full-col_RGB.webp", Link = "https://www.stockport.gov.uk/directories/one-stockport-live-well-directory", AltText = "Stockport Live Well logo", ButtonText = "Find local groups, organisations and services", Colour = EColourScheme.One_Stockport_Purple }' view-data='new ViewDataDictionary(ViewData) { { "IsDirectoryOnHomepage", true } }' />
<partial name="HomepageWhatsOn" />
<partial name="CallToAction" model='Model.HomepageContent.CallToAction' view-data='new ViewDataDictionary(ViewData) { { "AdditionalCssClass", "section--increased-vertical-margin" } }'  />
<partial name="HomepageSpotlightOn" />
<partial name="PreFooter" />
<partial name="EmailSubscribe" view-data='@(new ViewDataDictionary(ViewData) { {"AdditionalCssClasses", "section--teal section--no-margin"}, { "isOnHomepage", true} })' />