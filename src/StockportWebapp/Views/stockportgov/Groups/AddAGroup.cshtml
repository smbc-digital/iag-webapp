@using StockportWebapp.Config
@using StockportWebapp.Models
@using StockportWebapp.ViewModels
@model GroupSubmission
@inject StockportWebapp.FeatureToggling.FeatureToggles featureToggles

@{
    ViewData["Title"] = "Add your group or service";
    ViewData["og:title"] = "Add your group or service";
    Layout = "../Shared/_Layout.cshtml";
}

@section Breadcrumbs {
    @Html.Partial("Breadcrumb", new List<Crumb> { new Crumb("Stockport Local", "groups", "groups") })
}

<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCPMO2lE7np9cG_zG63JH_pNVmRfoajZjg&libraries=places"></script>
<div class="grid-container-full-width">
    <div class="grid-container grid-100">
        <div class="l-body-section-filled mobile-grid-100 tablet-grid-100 grid-100">
            <section aria-label="" class="grid-100 mobile-grid-100">
                <div class="l-content-container">
                    <div class="grid-100">
                        <h1 tabindex="-1" id="content">Add your group or service</h1>

                        @if (ViewBag.SubmissionError != null)
                        {
                            <div id="error-message-anchor"></div>
                            <div class="grid-100 tablet-grid-100 mobile-grid-100 alert alert-error contact-validation-error">
                                <div class="alert-icon">
                                    <i class="fa fa-exclamation fa-3x"></i>
                                </div>
                                <div class="alert-content grid-80 tablet-grid-80 mobile-grid-80">
                                    <h3>There has been a problem: </h3>
                                    <p>@Html.Raw(ViewBag.SubmissionError)</p>
                                </div>
                            </div>
                        }
                        <noscript>
                            <div id="recaptchaJsError" class="grid-100 tablet-grid-100 mobile-grid-100 alert alert-error contact-validation-error">
                                <div class="alert-icon">
                                    <i class="fa fa-exclamation fa-3x"></i>
                                </div>
                                <div class="alert-content grid-80 tablet-grid-80 mobile-grid-80">
                                    <h3>There has been a problem: </h3>
                                    <p>For security reasons, you can’t use our contact forms with JavaScript turned off. Please enable JavaScript to use the form or alternatively send your enquiry to webcontent@stockport.gov.uk<br></p>
                                </div>
                            </div>
                        </noscript>
                        @{
                            var id = featureToggles.MultiStepForm ? "multistep-form" : "";
                            var wrapperId = featureToggles.MultiStepForm ? "multistep-form-sections-wrapper" : "";
                        }
                        <form id="@id" asp-controller="Groups" asp-action="AddAGroup" method="post" role="form" enctype="multipart/form-data">
                            <div class="form">
                                <div id="@wrapperId" class="form-section">
                                    <h2>About your group or service</h2>
                                    <section>
                                        <label asp-for="@Model.Name"></label>
                                        <input class="grid-50 tablet-grid-50 suffix-50 tablet-suffix-50 mobile-grid-100 form-control" asp-for="@Model.Name" />
                                        <span asp-validation-for="@Model.Name" class="form-field-validation-error grid-50 tablet-grid-50 suffix-50 tablet-suffix-50 mobile-grid-100 grid-parent"></span>

                                        <label asp-for="@Model.Address"></label>
                                        <p>Enter a postcode or place name</p>
                                        <input type="text" id="location-autocomplete" class="grid-50 tablet-grid-50 suffix-50 tablet-suffix-50 mobile-grid-100 form-control location-search-input location-search-input-autoset" asp-for="@Model.Address" />
                                        <input type="hidden" id="latitude" asp-for="@Model.Latitude" />
                                        <input type="hidden" id="longitude" asp-for="@Model.Longitude" />
                                        <span asp-validation-for="@Model.Address" class="form-field-validation-error grid-50 tablet-grid-50 suffix-50 tablet-suffix-50 mobile-grid-100 grid-parent"></span>

                                        <input type="hidden" id="address" value="@Model.Address" />

                                        <label asp-for="@Model.Description"></label>
                                        <p>
                                            Let people know what your group or service does and why they should get in touch with you.<br />
                                            This is a great way to sell your group or service to people.
                                        </p>
                                        <textarea asp-for="@Model.Description" class="grid-50 tablet-grid-50 suffix-50 tablet-suffix-50 mobile-grid-100 form-control-deep" title="Enter a Description"></textarea>
                                        <span asp-validation-for="@Model.Description" class="form-field-validation-error grid-50 tablet-grid-50 suffix-50 tablet-suffix-50 mobile-grid-100 grid-parent"></span>

                                        <label asp-for="@Model.Categories"></label>
                                        <input type="hidden" asp-for="@Model.CategoriesList" />
                                        @Html.Partial("multiselect", new MultiSelect() { Limit = 3, Label = "Category", ValueControlId = "CategoriesList", AvailableValues = Model.AvailableCategories })
                                        <span asp-validation-for="@Model.CategoriesList" id="categoryListError" class="form-field-validation-error grid-50 tablet-grid-50 suffix-50 tablet-suffix-50 mobile-grid-100 grid-parent"></span>


                                    </section>
                                    <h2>Tell us who your group is suitable for</h2>
                                    <section>
                                        <label>Select who your group is suitable for (Optional)</label>
                                        <p>Don't worry if you are not sure about suitability, you can leave this blank</p>
                                        <div class="checkboxes">
                                            <a href="javascript:;" class="select-all-checkboxes">Select all</a>

                                            @for(var i = 0; i < Model.Suitabilities.Count; i++) 
                                            {
                                                <div class="checkbox">
                                                    <label>
                                                        <input type="checkbox" asp-for="@Model.Suitabilities[i].IsSelected" />
                                                        <input type="hidden" asp-for="@Model.Suitabilities[i].Name" />
                                                        <span>@Model.Suitabilities[i].Name</span>
                                                    </label>
                                                </div>
                                            }
                                        </div>

                                        <label>Select which age ranges your group or service is for</label>
                                        <div class="checkboxes">
                                            <a href="javascript:;" class="select-all-checkboxes">Select all</a>

                                            @for (var i = 0; i < Model.AgeRanges.Count; i++)
                                            {
                                                <div class="checkbox">
                                                    <label>
                                                        <input type="checkbox" asp-for="@Model.AgeRanges[i].IsSelected" />
                                                        <input type="hidden" asp-for="@Model.AgeRanges[i].Name" />
                                                        <span>@Model.AgeRanges[i].Name</span>
                                                    </label>
                                                </div>
                                            }
                                        </div>
                                    </section>
                                    <h2>Contact details</h2>
                                    <section>
                                        <label asp-for="@Model.Email"></label>
                                        <input class="grid-50 tablet-grid-50 suffix-50 tablet-suffix-50 mobile-grid-100 form-control" asp-for="@Model.Email" />
                                        <span asp-validation-for="@Model.Email" class="form-field-validation-error grid-50 tablet-grid-50 suffix-50 tablet-suffix-50 mobile-grid-100 grid-parent"></span>

                                        <label asp-for="@Model.PhoneNumber"></label>
                                        <input class="grid-50 tablet-grid-50 suffix-50 tablet-suffix-50 mobile-grid-100 form-control" asp-for="@Model.PhoneNumber" />
                                        <span asp-validation-for="@Model.PhoneNumber" class="form-field-validation-error grid-50 tablet-grid-50 suffix-50 tablet-suffix-50 mobile-grid-100 grid-parent"></span>

                                        <label asp-for="@Model.Website"></label>
                                        <input class="grid-50 tablet-grid-50 suffix-50 tablet-suffix-50 mobile-grid-100 form-control" asp-for="@Model.Website" />
                                        <span asp-validation-for="@Model.Website" class="form-field-validation-error grid-50 tablet-grid-50 suffix-50 tablet-suffix-50 mobile-grid-100 grid-parent"></span>

                                        <label asp-for="@Model.Facebook"></label>
                                        <i>For example: www.facebook.com/StockportMBC</i><br />
                                        <input class="grid-50 tablet-grid-50 suffix-50 tablet-suffix-50 mobile-grid-100 form-control" asp-for="@Model.Facebook" />
                                        <span asp-validation-for="@Model.Facebook" class="form-field-validation-error grid-50 tablet-grid-50 suffix-50 tablet-suffix-50 mobile-grid-100 grid-parent"></span>

                                        <label asp-for="@Model.Twitter"></label>
                                        <i>For example: @@StockportMBC </i>
                                        <input class="grid-50 tablet-grid-50 suffix-50 tablet-suffix-50 mobile-grid-100 form-control" asp-for="@Model.Twitter" />
                                        <span asp-validation-for="@Model.Twitter" class="form-field-validation-error grid-50 tablet-grid-50 suffix-50 tablet-suffix-50 mobile-grid-100 grid-parent"></span>

                                    </section>

                                    <h2>Additional information</h2>
                                    <section>
                                        <label asp-for="@Model.Image"></label>
                                        <p>
                                            Choose an image that captures your group
                                            <br />We recommend using at least 2160x1080px (2:1 ratio) image that's not larger than 5mb
                                            <br />Accepted file types: jpg, jpeg, gif and png
                                        </p>
                                        <input type="file" class="grid-50 tablet-grid-50 suffix-50 tablet-suffix-50 mobile-grid-100 form-control" asp-for="@Model.Image" />
                                        <span asp-validation-for="@Model.Image" class="form-field-validation-error grid-50 tablet-grid-50 suffix-50 tablet-suffix-50 mobile-grid-100 grid-parent"></span>

                                        <label class="label-for-checkbox hide-on-mobile">Do you have any volunteering opportunities?</label>
                                        <label class="label-for-checkbox hide-on-desktop hide-on-tablet">Group Volunteers</label>
                                        <div class="switch">
                                            <label>
                                                <input asp-for="@Model.Volunteering" id="volunteering-needed" type="checkbox">
                                                <span class="lever"></span>
                                            </label>
                                        </div>
                                        <i class="small">
                                            <ul>
                                                <li>Let people get in touch with you about volunteering opportunities</li>
                                                <li>Let people know that your group is looking for volunteers</li>
                                            </ul>
                                        </i>
                                        <div id="volunteering-text">
                                            <i>You can edit the text below to customise this message</i>
                                            <textarea asp-for="@Model.VolunteeringText" class="grid-50 tablet-grid-50 suffix-50 tablet-suffix-50 mobile-grid-100 form-control-deep">
                                                If you would like to become a volunteer for this group, please email us with your interest and we'll get in touch if there are any opportunities.
                                            </textarea>
                                            <span asp-validation-for="@Model.VolunteeringText" class="form-field-validation-error grid-50 tablet-grid-50 suffix-50 tablet-suffix-50 mobile-grid-100 grid-parent"></span>
                                        </div>


                                        <div class="g-recaptcha reCaptcha" data-sitekey="6LfAeSIUAAAAAGsx6tYHz4MIvhP0pSx9Tq7Hf8Yx"></div>
                                        <div Class="clearfix"></div>

                                        <stock-button id="uitest-contact-form-submit"
                                                      class="button-contact-us">Add your group or service</stock-button>
                                    </section>

                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
