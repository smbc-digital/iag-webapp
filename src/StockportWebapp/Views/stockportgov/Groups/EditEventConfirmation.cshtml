@using StockportWebapp.Config
@using StockportWebapp.Models
@using StockportWebapp.ViewModels

@{
    ViewData["Title"] = "Edit event";
    ViewData["og:title"] = "Edit event";
    Layout = "../Shared/_Layout.cshtml";
}

@section Breadcrumbs {
    @Html.Partial("Breadcrumb", new List<Crumb> { new Crumb("Stockport Local", "groups", "Group"),
                                            new Crumb("Manage your groups", "manage", "groups"),
                                            new Crumb(ViewBag.GroupName, "manage/" + ViewBag.GroupSlug, "groups"),
                                            new Crumb("Manage your events", "manage/" + ViewBag.GroupSlug + "/events/", "groups"),
                                            new Crumb(ViewBag.EventName, "manage/" + ViewBag.GroupSlug + "/events/" + ViewBag.Slug, "groups") })
}

<div class="grid-container-full-width">
    <div class="grid-container grid-100">

        <div class="l-body-section-filled l-group-content mobile-grid-100 tablet-grid-100 grid-100">
            <section aria-label="@ViewData["Title"] content">
                <div class="l-content-container grid-100 grid-parent group-margin" id="group-padding">
                    <div class="grid-100 centre word-wrap">
                        <h1 class="group-article-title">@ViewData["Title"]</h1>
                        <div class="icon-bordered icon-bordered-fixed green tick">
                            <i class="fa fa-check fa-5x" aria-hidden="true"></i>
                        </div>
                        <h2>You've successfully edited @ViewBag.EventName</h2>
                    </div>
                    <div class="grid-100 centre">
                        <p>The change you've made will happen shortly so you won't have to do anything.</p>
                    </div>
                    <div class="grid-100 centre mixed-buttons">
                        <stock-button as-link="true" href="@Url.Action("ManageGroup", "Groups", new { slug = ViewBag.GroupSlug})">Go back to manage your group</stock-button>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>

<script type="text/javascript">
    require(['groups', 'jquery.steps', 'recaptcha'],
        function (groups, multiStepForm) {            
            groups.Init();
           
        })
</script>