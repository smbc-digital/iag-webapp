@using StockportWebapp.Config
@using StockportWebapp.Models
@using StockportWebapp.ViewModels

@{
    ViewData["Title"] = "Add a new user";
    ViewData["og:title"] = "Add a new user";
    ViewData["Beta"] = true;
    ViewData["BetaForm"] = "https://stockportcouncil.typeform.com/to/kEAxqh";
    Layout = "../Shared/_Layout.cshtml";
}

@section Breadcrumbs {
    @Html.Partial("Breadcrumb", new List<Crumb> { new Crumb("Find a local group", "groups", "Group"), new Crumb("Manage your groups", "manage", "groups"), new Crumb(ViewBag.GroupName, "manage/" + ViewBag.GroupName, "groups"), new Crumb("Users", "manage/" + ViewBag.GroupName + "/users", "groups") })
}

<div class="grid-container-full-width">
    <div class="grid-container grid-100">

        <div class="l-body-section-filled l-group-content mobile-grid-100 tablet-grid-100 grid-100">
            <section aria-label="@ViewData["Title"] content">
                <div class="l-content-container grid-100 grid-parent group-margin" id="group-padding">
                    <div class="grid-100 centre">
                        <h1 class="group-article-title">@ViewData["Title"]</h1>
                        <div class="icon-bordered icon-bordered-fixed green tick">
                            <i class="fa fa-check fa-5x" aria-hidden="true"></i>
                        </div>
                        <h2>You've successfully added @ViewBag.Email to @ViewBag.GroupName</h2>
                    </div>
                    <div class="grid-100 centre">
                        <p>This user will now be able to manage your group's information and add or remove users.</p>
                    </div>
                    <div class="grid-100 centre mixed-buttons">
                        <stock-button as-link="true" href="@Url.Action("Users", "Groups", new { slug = ViewBag.Slug})">Go back to add or remove users</stock-button>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>

