@using StockportWebapp.Config
@using StockportWebapp.Models
@using StockportWebapp.ViewModels
@model StockportWebapp.ProcessedModels.ProcessedGroup

@{
    ViewData["Title"] = "Publish " + Model.Name;
    ViewData["og:title"] = "Publish " + Model.Name;
    ViewData["Beta"] = true;
    ViewData["BetaForm"] = "https://stockportcouncil.typeform.com/to/kEAxqh";
    Layout = "../Shared/_Layout.cshtml";
}

@section Breadcrumbs {
    @Html.Partial("Breadcrumb", new List<Crumb> { new Crumb("Find a local group", "groups", "Group"), new Crumb("Manage your groups", "manage", "groups"), new Crumb(Model.Name, "manage/" + Model.Slug, "groups") })
}

<div class="grid-container-full-width">
    <div class="grid-container grid-100">

        <div class="l-body-section-filled l-group-content mobile-grid-100 tablet-grid-100 grid-100">
            <section aria-label="@Model.Name content">
                <div class="l-content-container grid-100 grid-parent group-margin" id="group-padding">
                    <div class="grid-100">
                        <h1 class="group-article-title">@ViewData["Title"]</h1>
                    </div>
                    <div class="grid-100">
                        <h2>Make sure your group's information is upto date</h2>
                        <div>
                            <p>It's really important that your group's information is upto date.</p>
                            <p>Upto date information makes it easier for people who want to get involved in your group to get in touch with you.</p>
                            <p>If you want to <a href="@Url.Action("EditGroup", "Groups", new {slug = Model.Slug})">Update your group's information</a>, the changes will appear straight away.</p>
                            <p>
                                <strong>Are you sure you want to publish your group?</strong>
                            </p>
                        </div>
                    </div>
                    <div class="grid-30 mixed-buttons">
                        <div>
                            @using (Html.BeginForm("PublishGroup", "Groups", FormMethod.Post))
                            {
                                <stock-button class="">Publish my group</stock-button>
                            }
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>

