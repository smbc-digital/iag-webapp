@model StockportWebapp.ViewModels.ThankYouMessageViewModel
@{
    ViewData["Title"] = "Thank you";
    ViewData["og:title"] = "Thank you";

    Layout = "../Shared/_Layout.cshtml";
}

<div class="grid-container-full-width">
    <div class="grid-container grid-100">
        <div class="l-body-section-filled mobile-grid-100 tablet-grid-100 grid-100">
            <section aria-label="Thank you message" class="grid-100 mobile-grid-100">
                <div class="l-content-container thank-you">
                    <div class="grid-100">
                        <h1>Thank you for contacting us</h1>
                        <div class="icon-bordered icon-bordered-fixed">
                            <span class="fa fa-check fa-5x" aria-hidden="true"></span>
                        </div>
                        <p>We’ll respond to your enquiry as soon as possible.</p>
                        <a class="button-default" href="@Model.ReturnUrl">@Model.ButtonText</a>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
