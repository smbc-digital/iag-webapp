@model DirectoryViewModel
@{
    var directory = Model.DirectoryEntry;
    ViewData["Title"] = directory.Name;
    ViewData["og:title"] = directory.Name;
    ViewData["Description"] = directory.MetaDescription;
    Layout = "../Shared/_Layout2023.cshtml"; 
}
<div class="grid-container-full-width">
    <div class="placeholder placeholder-bg-teal placeholder-small">
        <h1>@directory.Name</h1>
    </div>
    <div class="placeholder placeholder-bg-orange placeholder-xs">
        <p>BREADCRUMBS</p>
    </div>
    <div class=" grid-container">
        <div class="grid-30">
            <div class="placeholder placeholder-small placeholder-bg-grey">
                <p>LOGO</p>
            </div>

            <div class="placeholder placeholder-large placeholder-bg-teal">
                <p>ORGANISATION DETAILS</p>
            </div>
        </div>

        <div class="grid-70">
            <div class="placeholder placeholder-medium placeholder-bg-teal">
                <p>ABOUT US</p>
            </div>

            <div class="placeholder placeholder-medium placeholder-bg-grey">
                <p>DATE AND TIMES</p>
            </div>

            <div class="placeholder placeholder-medium placeholder-bg-teal">
                <p>RANGE</p>
            </div>

            <div class="placeholder placeholder-medium placeholder-bg-grey">
                <p>COST</p>
            </div>
            <hr>

            <div class="placeholder placeholder-medium placeholder-bg-teal">
                <p>FACILITIES AVAILABLE</p>
            </div>

            <div class="placeholder placeholder-medium placeholder-bg-grey">
                <p>HOW TO FIND US</p>
            </div>
        </div>
    </div>
</div>