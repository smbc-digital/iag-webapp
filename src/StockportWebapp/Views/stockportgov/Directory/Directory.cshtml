@model DirectoryViewModel
@{
    ViewData["Title"] = Model.Directory.Title;
    ViewData["og:title"] = Model.Directory.Title;
    ViewData["Description"] = Model.Directory.MetaDescription;
    Layout = "../Shared/_Layout2023.cshtml";

    var subdirectories = Model.Directory.SubDirectories;
}

<partial name="GlobalAlerts" model='Model.Directory.Alerts' />

<div class="grid-container-full-width" style="background-color:white;">
    <div class="grid-container">
        <div class="grid-100">
            <h1>@Model.Directory.Title</h1>
            <div class="directory-body lead">@Model.Directory.Body</div>
        </div>
    </div>

    @if (Model.Directory.CallToAction is not null)
    {
        <partial name="CallToAction" model='Model.Directory.CallToAction' />
    }

    <div class="grid-container">
        <div class="grid-100">
            <div class="section__content section__content--no-margin">
                <ul class="navcard-wrapper navcard-wrapper--no-margin">
                    @foreach(var subdirectory in subdirectories){
                        var colourScheme = string.IsNullOrEmpty(subdirectory.ColourScheme) ? "teal" : subdirectory.ColourScheme.ToLower();
                        <li class="navcard navcard--width-33 navcard--center navcard-all navcard--border-top-10 navcard--theme-@colourScheme navcard--theme-@colourScheme-all">
                            <a href=@Url.Action("Directory", "Directory", new { slug=@subdirectory.Slug }) class="navcard__link">
                                <div class="navcard__content" >
                                    @if(!string.IsNullOrEmpty(subdirectory.Icon)) {
                                        <div class="navcard__icon">
                                            <span class="@subdirectory.Icon.ToLower()" aria-hidden="true"></span>
                                        </div>
                                    }

                                    <div class="navcard-content--padding navcard--no-padding-top">
                                        <h3 class="navcard__title navcard__title--black">@subdirectory.Title</h3>
                                        <p class="navcard__teaser">@subdirectory.Teaser</p>
                                    </div>
                                </div>
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>

    <partial name="DirectoryContentDisclaimer">
</div>