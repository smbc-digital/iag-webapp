
@using StockportWebapp.ProcessedModels

@model ProcessedContactUsArea
@{
    ViewData["Title"] = Model.Title;
    ViewData["og:title"] = Model.Title;
    Layout = "../Shared/_Layout.cshtml";
}

@section Breadcrumbs {
    @Html.Partial("Breadcrumb", Model.Breadcrumbs)
}

<div class="l-page-content">
    <div class="full-width-title">
        <div class="grid-container grid-parent grid-100">
            <div class="grid-100 tablet-grid-100 mobile-grid-100">
                <h1>@Model.Title</h1>
            </div>
        </div>
    </div>
    <div class="grid-container">
        <div class="dashboard-button-container">
            @foreach (var primaryItem in Model.PrimaryItems)
            {
                var url = primaryItem.NavigationLink;

                <a href="@url" class="section-link">
                    <i class="@primaryItem.Icon" aria-hidden="true"></i>
                    @primaryItem.Title
                </a>
            }
        </div>
    </div>
</div>

<style>
    .dashboard-button-container {
        display: flex;
        justify-content: flex-start;
    }

        .dashboard-button-container i {
            padding-bottom: 10px;
        }

        .dashboard-button-container a {
            text-align: center;
        }

    .section-link {
        border-radius: 3px;
        background-color: #fff;
        display: flex;
        flex-direction: column;
        align-items: center;
        margin: 0 15px 20px 0;
        padding: 20px;
        border: 1px solid #ccc;
        color: #000;
        font-weight: 600;
        text-decoration: none;
        -webkit-box-shadow: 0 10px 13px 0 rgba(0,0,0,.1);
        box-shadow: 0 10px 13px 0 rgba(0,0,0,.1);
        float: left;
        width: 33%;
    }

        .section-link i {
            font-size: 3.25em;
        }


            .section-link i:hover {
                text-decoration: none;
            }

        .section-link:hover {
            box-shadow: 0 20px 40px 0 rgba(0,0,0,.3);
            cursor: pointer;
            transition-duration: .5s;
            transition-property: box-shadow;
            text-decoration: underline;
            color: black;
        }
</style>