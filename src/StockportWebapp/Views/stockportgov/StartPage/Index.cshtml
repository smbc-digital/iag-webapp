@model StockportWebapp.ProcessedModels.ProcessedStartPage
@{
    ViewData["Title"] = Model.Title;
    ViewData["og:title"] = Model.Title;
    ViewData["Description"] = Model.Teaser;
    Layout = "../Shared/_Layout.cshtml";
}

@section Breadcrumbs {
    <partial name="Breadcrumb" model='Model.Breadcrumbs'/>
}
<div class="grid-container-full-width">
    <div class="grid-container grid-100">
        <div class="l-body-section-filled grid-100">
            <section id="content" aria-label="@Model.Title content" class="grid-100 mobile-grid-100">
                <div class="l-content-container l-article-container">
                    @{
                        if (Model.Alerts != null)
                        {
                            foreach (var alert in Model.Alerts)
                            {
                                <partial name="DisplayTemplates/Alert" model='alert'/>
                            }
                        }
                    }
                    <h1>@Model.Title</h1>
                    <p class="subtitle">@Model.Summary</p>
                    @Html.Raw(Model.UpperBody)
                    <stock-button as-link="true" href="@Model.FormLink">@Model.FormLinkLabel</stock-button>
                    @Html.Raw(Model.LowerBody)
                </div>
            </section>
        </div>
    </div>
</div>
<script type="text/javascript">
    require(['alerts', 'startup'],
    function (alerts, startup) {
        alerts.Init();
        startup.Init();
    });
</script>