@using StockportWebapp.FeatureToggling
@using StockportWebapp.Models
@using StockportWebapp.ViewModels
@inject FeatureToggles FeatureToggles

@model EventCalendar
@{
    @if (FeatureToggles.DisplayNewEventPageFeatures && Model.FromSearch)
    {
        ViewData["og:title"] = string.IsNullOrWhiteSpace(Model.Category) ? "All Categories" : Model.Homepage.Categories.Where(c => c.Slug == Model.Category).First().Name;
        ViewData["Title"] = ViewData["og:title"];
    }
    else
    {
        ViewData["og:title"] = "What's on in Stockport";
        ViewData["Title"] = "What's on in Stockport";
    }
    Layout = "../Shared/_Layout.cshtml";
}

@section Breadcrumbs {
    @if (FeatureToggles.DisplayNewEventPageFeatures && Model.FromSearch)
    {
        @Html.Partial("Breadcrumb", new List<Crumb>() { new Crumb("What's on in Stockport", "events", "event") })
    }
    else
    {
        @Html.Partial("Breadcrumb", new List<Crumb>())
    }
}

<div class="l-page-content">
    <div class="full-width-title">
        <div class="grid-container grid-parent grid-100">
            <div class="grid-70 tablet-grid-70 mobile-grid-100">
                <h1 class="full-width-title-with-button">What's on in Stockport</h1>
            </div>
            <div class="header-right-button grid-30 tablet-grid-30 hide-on-mobile">
                <stock-button as-link="true" class="button-outline-white-transparent" href="@Url.Action("AddYourEvent", "Events")">Add your event</stock-button>
            </div>
        </div>
    </div>
    
    @if (FeatureToggles.DisplayNewEventPageFeatures)
    {
        @Html.Partial("Events/EventsFilterBar", Model)
    }

    @if (FeatureToggles.DisplayNewEventPageFeatures)
    {
        if (Model.FromSearch)
        {
            @Html.Partial("Events/EventsResultsList", Model)
        }
        else
        {
            @Html.Partial("Events/EventHomepage", Model.Homepage)
        }
    }
    else
    {
        @Html.Partial("Events/EventsCalendar", Model)
    }
    
    @if (FeatureToggles.DisplayNewEventPageFeatures)
    {
    <div class="full-width-title hide-on-desktop hide-on-tablet add-button-container">
        <div class="grid-container grid-parent mobile-grid-100">
            <div class="header-right-button mobile-grid-100">
                <stock-button as-link="true" class="button-outline-white-transparent" href="@Url.Action("AddYourEvent", "Events")">Add your event</stock-button>
            </div>
        </div>
    </div>
    }
</div>