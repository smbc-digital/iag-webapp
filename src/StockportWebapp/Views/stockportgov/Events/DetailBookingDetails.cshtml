@model ProcessedEvents
@{
    string eventWrapperCssClasses = (string)ViewData["eventWrapperCssClasses"];
    string borderTop = (string)ViewData["BorderTop"];
}

<div class="event-detail--100">
    <div class="@borderTop">
        <div class="@eventWrapperCssClasses">
            <h2 class="event-detail__heading">Event and booking details</h2>
            <div class="event-detail__details">
                <p>Cost:</p>
                <p>@Model.Fee</p>
            </div>
            @if (!string.IsNullOrEmpty(Model.PhoneNumber))
            {
                <div class="event-detail__details">
                    <p>Phone:</p>
                    <p><strong>@Model.PhoneNumber</strong></p>
                </div>
            }
            @if (!string.IsNullOrEmpty(Model.Email))
            {
                <div class="event-detail__details">
                    <p>Email:</p>
                    <p><a href="mailto:@Model.Email">@Model.Email</a></p>
                </div>
            }
            @if (!string.IsNullOrEmpty(Model.Website))
            {
                <div class="event-detail__details">
                    <p>Visit:</p>
                    <p><a href="@Model.Website">@Model.Website</a></p>
                </div>
            }
            @if (!string.IsNullOrEmpty(Model.BookingInformation))
            {
                <a href="@Model.BookingInformation" data-cy="book-event-button" class="btn event-detail__button btn--width-30 btn--chevron-forward btn--bold btn--chevron-bold">
                    <span class="btn_text">Book a place</span>
                </a>
            }
        </div>
    </div>
</div> 