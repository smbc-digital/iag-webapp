@inject IFeatureManager FeatureManager
@model ShedItem;
@{
    Layout = "../Shared/_Layout2023.cshtml";
    ViewData["Title"] = Model.Name;
    ViewData["og:title"] = Model.Name;
    string title = "Stockport's heritage assets";
    ViewData["Description"] = title;

    string borderTeal = " navcard--border-top-10 navcard--theme-teal-lighter-top ";
    string borderGrey = " navcard-all navcard--theme-grey-accent-all";
    string noBorder = " navcard--border-top-0";
    string borderRadius = " navcard--radius-bottom-left navcard--radius-bottom-right";
    string greyBorderCssClasses = $"{borderGrey} {noBorder} {borderRadius}";
}

<div class="grid-container-full-width background-grey">
    <partial name="Breadcrumb2023" model='new List<Crumb> { new Crumb(title, "directories/results/heritage-assets", "Shed") }' />

    <div class="grid-container">
        <div class="grid-100">
            <section class="article">
                <div class="article--70">
                    <h1 class="directory__title">@Model.Name</h1>
                </div>

                <div class="article--30 article--30-center-align hide-on-tablet hide-on-mobile js-only" id="back-button-desktop"></div>
            </section>

            <section class="directory">
                <div class="directory--30 directory--border-top @borderTeal">
                    <div class="directory__wrapper navcard--white @greyBorderCssClasses">
                        <partial name="ShedEntryCore" />
                    </div>
                </div>

                <div class="directory--70 directory--border-top @(Model.Images.Any() || !string.IsNullOrEmpty(Model.Description) ? borderTeal : string.Empty)">
                    <partial name="ShedEntryDescription" model='Model.Description' view-data='@(new ViewDataDictionary(ViewData) { { "AdditionalCssClasses", @greyBorderCssClasses } })' />
                    <partial name="ShedEntryDocuments" model='Model.Documents' view-data='@(new ViewDataDictionary(ViewData) { { "AdditionalWrapperCssClasses", @borderTeal }, { "AdditionalCssClasses", @greyBorderCssClasses } })' />
                    @if (Model.Lat is not null)
                    {
                        <partial name="LeafletMapContent" model=@(new LeafletMapViewModel { MapName = "https://maps.stockport.gov.uk/historic-environment/index.html", Lat = Model.Lat, Lng = Model.Lng }) view-data='@(new ViewDataDictionary(ViewData) { { "AdditionalWrapperCssClasses", @borderTeal }, { "AdditionalCssClasses", @greyBorderCssClasses } })' />
                    }
                    <partial name="ShedEntryImages" model='Model.Images' view-data='@(new ViewDataDictionary(ViewData) { { "AdditionalWrapperCssClasses", @borderTeal }, { "AdditionalCssClasses", @greyBorderCssClasses } })' />
                    <div class="article--30 article--30-center-align hide-on-desktop js-only" id="back-button-mobile"></div>
                    <partial name="BackButtonScript" view-data='new ViewDataDictionary(ViewData) { { "referrerValue", "/heritage-assets" }, { "AdditionalCssClasses", "directory__button--no-margin-top" } }' />
                </div>
            </section>
        </div>
    </div>

    @if (await FeatureManager.IsEnabledAsync("MakeASuggestionForm"))
    {
        <section class="section section--white section--padded section--no-margin">
            <div class="grid-container">
                <partial name="HistoricAssetsReportProblem" model='Html.UrlEncoder.Encode(Model.Name + ":" + Model.HeRef)' />
            </div>
        </section>
    }
</div>