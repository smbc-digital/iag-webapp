@using StockportWebapp.Models

@model ProfileNew
@{
    ViewData["Title"] = Model.Title;
    var articleTitle = Model.Breadcrumbs.LastOrDefault() != null ? Model.Breadcrumbs.LastOrDefault().Title + " - " : string.Empty;
    ViewData["og:title"] = articleTitle + Model.Title;
    ViewData["Description"] = Model.Teaser;
    Layout = "../../Shared/_LayoutSemantic.cshtml";
}

@section Breadcrumbs {
    <partial name="SemanticBreadcrumb" model='Model.Breadcrumbs' />
}

<div class="page-container">
    <h1 tabindex="-1" id="content">@ViewData["Title"]</h1>
    <p class="lead-paragraph">@Model.LeadParagraph</p>
    <hr class="thick-divider" />
    <article>
        @Html.Raw(Model.Body)
    </article>
    
    @if (Model.DidYouKnowSection.Count > 0)
    {
        <hr class="thick-divider"/>

        <section class="did-you-know">
            <h2>Did you know?</h2>
            @foreach (var didyouknow in Model.DidYouKnowSection)
            {
                <div class="grid-5 mobile-grid-10 tablet-grid-5"><span class="si si-@didyouknow.Icon"></span></div>

                <div class="grid-95 mobile-grid-90 tablet-grid-95">
                    @if (didyouknow.Link != "")
                    {
                        <a href="@didyouknow.Link" rel="@didyouknow.Name"><h4>@didyouknow.Text</h4></a>
                    }
                    else
                    {
                        <h4>@didyouknow.Text</h4>
                    }
                </div>
            }
        </section>
    }
</div>
