@model string
@{
    Layout = "_LayoutSemantic";
    ViewData["Title"] = "Payment declined";
}

<div class="ineligible-warning">
    <div class="header-container">
        <div>
            <i class="fa fa-exclamation" aria-hidden="true"></i>
        </div>
        <h1>Your payment was declined</h1>
    </div>
    <section class="body-container">
        <p>Contact your bank for more details. No money has been taken from your account.</p>
        <a href="@Url.Action("Detail", "Payment", new { slug = Model })" class="button-primary">Go back to try the payment again</a>
        <a href="@Url.Action("Index", "Home") class="button-secondary">Go to the homepage</a>
    </section>
</div>