@model PaymentResult
@{
    ViewData["Title"] = $"{Model.Title} payment declined";
    ViewData["og:title"] = $"{Model.Title} payment declined";
    ViewData["Description"] = $"{Model.Title} payment declined";
    ViewData["Type"] = "Payment";
    Layout = "../Shared/_Layout2023.cshtml";
}

<div class="grid-container-full-width" style="background-color:white;" data-cy="payment-page">
    <partial name="Breadcrumb2023" model="Model.Breadcrumbs" />

    <div class="grid-container">
        <div class="grid-100">
            <div class="article--70">
                <h1 class="h-xl article_title">@Model.Title</h1>
             </div>
            <section class="article">
                <article class="article--70 payment-failure">
                    <h2 class="h-l">
                        <span class="fa-regular fa-circle-exclamation"></span>
                        Your payment was declined
                    </h2>
                        
                    <p>No money has been taken from your account. Please contact your bank for more details.</p>
                    <p><a href="@Url.Action("Detail", "Payment", new { slug = Model.Slug })" class="btn btn--chevron-forward btn--width-30">Try the payment again</a><p>
                        <hr />
                    <p><a href="@Url.Action("Index", "Home") class="button-secondary">Go to the homepage</a></p>
                </article>
            </section>
            
        </div>
    </div>
</div>