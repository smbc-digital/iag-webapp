@inject IStaticAssets StaticAssets
@inject BusinessId BusinessId

<footer>
    <div class="l-container-footer">
        <div class="grid-container grid-parent">
            <div class="grid-100 grid-parent">
                <div class="grid-25 tablet-grid-25 mobile-grid-100">
                    <div class="footer-stockport-logo">
                        <a href="https://www.stockport.gov.uk">
                            <img src="@StaticAssets.UrlFor("logo-stockport-footer%402x.png")" alt="Stockport Council Logo" />
                        </a>
                    </div>
                </div>

                <div class="grid-75"></div>
            </div>
        </div>
    </div>

    <div class="grid-100 footer-bottom">
        <p id="ami-trigger" >
            © @DateTime.Now.Year Stockport Metropolitan Borough Council
        </p>
    </div>
</footer>