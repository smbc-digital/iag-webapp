@using StockportWebapp.Models
@inject IStaticAssets StaticAssets

<footer>
    <partial name="AToZStockportGov" model='""'/>
    <div class="l-container-footer">
        <div class="grid-container grid-parent">
            <div class="grid-100 grid-parent">
                <div class="grid-30 tablet-grid-30 tablet-push-70 push-70 footer-social-container">
                    <div class="footer-social-links">
                        <a href="https://twitter.com/StockportMBC">
                            <div class="icon-bordered icon-bordered-fixed icon-container icon-twitter">
                                <span class="fa fa-twitter fa-2x" aria-hidden="true"></span>
                            </div>
                        </a>
                        <a href="https://www.facebook.com/StockportMBC">
                            <div class="icon-bordered icon-bordered-fixed icon-container icon-fb">
                                <span class="fa fa-facebook fa-2x" aria-hidden="true"></span>
                            </div>
                        </a>
                        <a href="https://www.youtube.com/user/StockportCouncil">
                            <div class="icon-bordered icon-bordered-fixed icon-container icon-youtube">
                                <span class="fa fa-youtube fa-2x" aria-hidden="true"></span>
                            </div>
                        </a>
                        <a href="https://www.stockport.gov.uk/doitonline/websitehelp/rssfeeds">
                            <div class="icon-bordered icon-bordered-fixed icon-container icon-rss">
                                <span class="fa fa-rss fa-2x" aria-hidden="true"></span>
                            </div>
                        </a>
                    </div>
                </div>
                <div class="grid-25 tablet-grid-25 tablet-pull-30 pull-30 mobile-grid-100">
                    <div class="footer-stockport-logo">
                        <a href="https://www.stockport.gov.uk"><img src="@StaticAssets.UrlFor("logo-stockport-footer%402x.png")" alt="Stockport Council Logo" /></a>
                    </div>
                </div>
                <div class="footer-links tablet-grid-45 pull-30 tablet-pull-30 grid-45 grid-100-mobile">
                    <div class="grid-50 tablet-grid-50 mobile-grid-100">
                        <ul class="footer-nav">
                            <li><a href="https://www.stockport.gov.uk/contacts">Contact Us</a></li>
                            <li><a href="https://www.stockport.gov.uk/services/councildemocracy/yourcouncil/freedomofinformationdataprotection/dataprotection/">Data Protection</a></li>
                            <li><a href="https://www.stockport.gov.uk/services/councildemocracy/yourcouncil/freedomofinformationdataprotection/foipolicy">Freedom of Information</a></li>
                        </ul>
                    </div>
                    <div class="grid-50 tablet-grid-50 mobile-grid-100">
                        <ul class="footer-nav">
                            <li><a href="https://www.stockport.gov.uk/doitonline/websitehelp/privacynotice-cookies">Cookie policy</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="grid-100 footer-bottom">
        <p id="ami-trigger" >
            &copy; @DateTime.Now.Year Stockport Metropolitan Borough Council
        </p>
    </div>
</footer>