@model IEnumerable<Crumb>

<nav class="breadcrumb-container" aria-label="breadcrumb">
    <div class="grid-container grid-100">
        <ul class="breadcrumb">
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
            @{
                string title = ViewBag.Title is not null ? ViewBag.Title.ToString() : string.Empty;

                foreach (Crumb crumb in Model)
                {
                    <li class="chevron">&rsaquo;</li>
                    <li><a href="@crumb.NavigationLink">@crumb.Title</a></li>
                }
            }

            <li class="chevron">&rsaquo;</li>
            <li class="current">@Html.ActionLink(title, ViewContext.RouteData.Values["action"].ToString(), ViewContext.RouteData.Values["controller"].ToString(), new { tag = ViewBag.Tag })</li>
        </ul>
    </div>
</nav>