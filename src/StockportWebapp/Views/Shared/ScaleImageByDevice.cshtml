@model Image

@{ string mobile = "only screen and (max-width: 767px)"; }
@{ string tablet = "only screen and (min-width: 768px) and (max-width: 1024px)"; }
@{ string desktop = "only screen and (min-width: 1025px)"; }

<style type="text/css">
    @@media @mobile {
        .@Model.CssClass { background-image: url(@Model.Url?w=767); }
    }

    @@media @tablet {
        .@Model.CssClass { background-image: url(@Model.Url?w=1024); }
    }

    @@media @desktop {
        .@Model.CssClass { background-image: url(@Model.Url); }
    }
</style>